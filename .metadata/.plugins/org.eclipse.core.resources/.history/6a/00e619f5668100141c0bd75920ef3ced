package methodpractice;

public class PairOfDice { //rename to Dice to make more sense
	
	private Die[] d;
	
	public PairOfDice() {
		d = new Die[2];
	}
	public PairOfDice(int num) {
		d = new Die[num];
	}
	private void makeDice(int num) {
		for (int i = 0; i < num; i++) {
			d[i] = new Die();
		}
	}
	private void makeDice(int num, int dots) {
		for (int i = 0; i < num; i++) {
			d[i] = new Die(dots);
		}
	}
	

}
